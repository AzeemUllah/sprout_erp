      .container
        input#_csrf(type="hidden", name="_csrf", value="#{csrf}")
        .row
          .col-sm-8.col-sm-offset-2
            // Wizard container
            .wizard-container
              #wizardProfile.card.wizard-card(data-color='orange')
                form(action='', method='')
                  // You can switch ' data-color="orange" '  with one of the next bright colors: "blue", "green", "orange", "red"
                  .wizard-header
                    h3
                      b ENTER
                      |  YOUR LOGIN DETAILS
                      br
                      small This information will let us gather all the company details you are part off.
                  .wizard-navigation
                    ul
                      li
                        a(href='#credentials', data-toggle='tab') Credentials
                      li
                        a(href='#company', data-toggle='tab') Company
                  .tab-content
                    #credentials.tab-pane
                      .row
                        h4.info-text  Let's start with the basic information
                        .col-sm-4.col-sm-offset-1
                          .picture-container
                            .picture
                              img#wizardPicturePreview.picture-src(src='assets/img/default-avatar.png', title='')
                            h6
                        .col-sm-6
                          .form-group
                            label Email
                            input#email.form-control(name='username', type='email', placeholder='username@domain.com')
                          .form-group
                            label Password
                            br
                            input#password.form-control(type='password', name='password', placeholder='Password...')
                    #company.tab-pane
                      h4.info-text  Select a Company to Access:
                      .row
                        #companyListDiv.col-sm-10.col-sm-offset-1
                  .wizard-footer.height-wizard
                    .pull-right
                      input#next.btn.btn-next.btn-fill.btn-warning.btn-wd.btn-sm(type='button', name='next', value='Next')
                      input.btn.btn-finish.btn-fill.btn-warning.btn-wd.btn-sm(type='button', name='finish', value='Finish')
                    .pull-left
                      input.btn.btn-previous.btn-fill.btn-default.btn-wd.btn-sm(type='button', name='previous', value='Previous')
                    .clearfix

