doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        title Title
        link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/samoform.css')
        style.
            body{
            }
            .centered-form{
                margin-top: 192px;
                margin-left: 600px;
            }
            .bgl
            {
                width: 100%;
                height: 100%;
            }
            .centered-form .panel{
                background: rgba(255, 255, 255, 0.8);
                box-shadow: rgba(0, 0, 0, 0.3) 20px 20px 20px;
            }

    body
        .container
            .row(style='margin-left: 294px;margin-top: 147px;')
                // Card Projects
                .col-md-6.col-md-offset-4.divmain
                    .card.signincard(style='border-color: white;')
                        .signindiv5
                            img.signinimg(src='/images/sprout_4splash.png')
                        .signindiv1.col-md-offset-1
                            p.signP1
                                | Access and manage your instances from this Sprout account.
                        .card-content(style='border-top: 1px solid rgba(0, 0, 0, 0.17);')
                            form(method='post' action='/password')
                                .form-group(style='margin-bottom: 0px')
                                    input.form-control(type='hidden' name='_token' value='#{token}')
                                .form-group(style='margin-bottom: 0px')
                                    label(for='email') Password:
                                    input#email.form-control(type='password' name='password')
                                .form-group
                                    label(for='pwd') Confirm Password:
                                    input#pwd.form-control(type='password' name='confirmpass')
                                .signindiv2
                                    a(href='signup')
                                        p.signinp3 Sign up
                                br
                            if(typeof errors !== 'undefined')
                                each err in errors
                                    p.alert.alert-danger=err.msg
                                button.btn.btn-success.signinbtn(type='submit', style='background: #4aabae;') SIGN IN






