                                span.o_stat_text.o_not_hover.text-success Active
                                span.o_stat_text.o_hover.text-danger
                                    | Archive
                                    .oe_button_box(name='button_box')
                        button.btn.btn-sm.oe_stat_button(type='button', style='')
                            .fa.fa-fw.fa-usd.o_button_icon.sale
                            .o_form_field.o_stat_info
                                span.o_stat_value
                                    | 0
                                    span.o_stat_text Sales
                                    .oe_button_box(name='button_box')
                        button.btn.btn-sm.oe_stat_button(type='button', style='')
                            .fa.fa-fw.fa-arrows-v.o_button_icon.trace
                            .o_form_field.o_stat_info.trace_text
