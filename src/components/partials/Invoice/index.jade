                            .o_form_field_many2one.o_form_field.o_form_invisible
                                .o_form_input_dropdown
                                    span.o_dropdown_button(draggable='false')
                .col-md-4.invoicecol4
                    .oe_button_box(name='button_box')
                        button.btn.btn-sm.oe_stat_button(type='button', style='')
